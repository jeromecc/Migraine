<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coins_arrondis"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/Template_Img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/attribut_comprime"
        android:padding="1dp"
        android:src="@mipmap/comprime"/>


    <TextView
        android:id="@+id/Template_Medic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Template_Img"
        android:clickable="false"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Template_Dose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Template_Medic"
        android:layout_toRightOf="@id/Template_Img"
        android:clickable="false"/>

</RelativeLayout>