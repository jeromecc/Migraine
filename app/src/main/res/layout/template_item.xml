<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coins_arrondis"
    android:orientation="horizontal">

    <ImageView
        android:contentDescription="@string/attribut_comprime"
        android:id="@+id/Template_Img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:padding="1dp"
        android:src="@mipmap/comprime"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Template_Medic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Template_Dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"/>

    </LinearLayout>
</LinearLayout>