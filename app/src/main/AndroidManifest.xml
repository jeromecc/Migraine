<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.suinot.migraine"
          android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:icon="@mipmap/encephale"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Point_Entree"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".Configuration"
            android:label="@string/Config">
        </activity>
        <activity
            android:name=".Nouvelle_Migraine"
            android:label="@string/nouvelle_migraine"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".Migraine_en_cours"
            android:label="@string/migraine_en_cours"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".Historique"
            android:label="@string/Historique">
        </activity>
        <activity
            android:name=".Graphique"
            android:label="@string/Graphique">
        </activity>
    </application>

</manifest>
